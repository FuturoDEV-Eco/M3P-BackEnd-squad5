{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "M3P Backend",
    "description": "API para o projeto Recicle365"
  },
  "host": "localhost:3000",
  "basePath": "/",
  "schemes": [
    "http"
  ],
  "securityDefinitions": {
    "apiKeyAuth": {
      "type": "apiKey",
      "in": "header",
      "name": "Authorization",
      "description": "Insira o token de autenticação"
    }
  },
  "paths": {
    "/usuarios/": {
      "post": {
        "tags": [
          "Usuarios"
        ],
        "description": "Cria um novo usuario",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "description": "Dados do usuario",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "nome": {
                  "type": "string",
                  "example": "Nome do usuario"
                },
                "email": {
                  "type": "string",
                  "example": "email do usuario"
                },
                "senha": {
                  "type": "string",
                  "example": "12345678"
                },
                "cpf": {
                  "type": "string",
                  "example": "12345678910"
                },
                "sexo": {
                  "type": "string",
                  "example": "masculino ou feminino"
                },
                "cep": {
                  "type": "string",
                  "example": "12345678"
                },
                "logradouro": {
                  "type": "string",
                  "example": "Avenida egidios manuel de medeiros"
                },
                "bairro": {
                  "type": "string",
                  "example": "Bela Vista"
                },
                "numero": {
                  "type": "string",
                  "example": "123"
                },
                "localidade": {
                  "type": "string",
                  "example": "São Jose"
                },
                "uf": {
                  "type": "string",
                  "example": "SC"
                },
                "dataNascimento": {
                  "type": "string",
                  "example": "01/01/2000"
                }
              },
              "required": [
                "nome",
                "email",
                "senha",
                "cpf",
                "sexo",
                "cep",
                "logradouro",
                "bairro",
                "numero",
                "localidade",
                "uf",
                "dataNascimento"
              ]
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Created"
          },
          "400": {
            "description": "Bad Request"
          },
          "409": {
            "description": "Conflict"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "get": {
        "tags": [
          "Usuarios"
        ],
        "description": "Listar todos os usuarios ativos",
        "responses": {
          "200": {
            "description": "OK"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/usuarios/{id}": {
      "get": {
        "tags": [
          "Usuarios"
        ],
        "description": "Listar um usuario especifico",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string",
            "description": "Não lista dados sensiveis,como, CPF,endereço,data de nascimento e email"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "404": {
            "description": "Not Found"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "delete": {
        "tags": [
          "Usuarios"
        ],
        "description": "Deleta um usuario especifico",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string",
            "description": "Não é permitido deletar usuarios com ponto de coleta ativos"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Bad Request"
          },
          "404": {
            "description": "Not Found"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "put": {
        "tags": [
          "Usuarios"
        ],
        "description": "Edita um usuario especifico",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string",
            "description": "Id do usuario"
          },
          {
            "name": "body",
            "in": "body",
            "description": "Dados do usuario,não é permitido alterar o CPF",
            "schema": {
              "type": "object",
              "properties": {
                "nome": {
                  "type": "string",
                  "example": "Nome do usuario"
                },
                "email": {
                  "type": "string",
                  "example": "email do usuario"
                },
                "senha": {
                  "type": "string",
                  "example": "12345678"
                },
                "sexo": {
                  "type": "string",
                  "example": "masculino ou feminino"
                },
                "cep": {
                  "type": "string",
                  "example": "12345678"
                },
                "logradouro": {
                  "type": "string",
                  "example": "Avenida egidios manuel de medeiros"
                },
                "bairro": {
                  "type": "string",
                  "example": "Bela Vista"
                },
                "numero": {
                  "type": "string",
                  "example": "123"
                },
                "localidade": {
                  "type": "string",
                  "example": "São Jose"
                },
                "uf": {
                  "type": "string",
                  "example": "SC"
                },
                "dataNascimento": {
                  "type": "string",
                  "example": "01/01/2000"
                }
              },
              "required": [
                "nome",
                "email",
                "senha",
                "sexo",
                "cep",
                "logradouro",
                "bairro",
                "numero",
                "localidade",
                "uf",
                "dataNascimento"
              ]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Bad Request"
          },
          "404": {
            "description": "Not Found"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/login/": {
      "post": {
        "tags": [
          "Login"
        ],
        "description": "Efetua o login",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "description": "Email e senha do usuario",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "email": {
                  "type": "string",
                  "example": "usuario@gmail.com"
                },
                "senha": {
                  "type": "string",
                  "example": "12345678"
                }
              },
              "required": [
                "email",
                "senha"
              ]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Bad Request"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/local/": {
      "post": {
        "tags": [
          "Locais"
        ],
        "description": "Cria um novo local",
        "parameters": [
          {
            "name": "authorization",
            "in": "header",
            "type": "string"
          },
          {
            "name": "body",
            "in": "body",
            "description": "Se o cep for valido,retorna o endereco completo,caso contrario preencha todos os campos",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "nomeLocal": {
                  "type": "string",
                  "example": "Lagoa da Conceição"
                },
                "descricaoLocal": {
                  "type": "string",
                  "example": " Proximo a avenida das rendeiras,esquina com a rua almoedo.Local de facil acesso"
                },
                "TipoResiduoAceito": {
                  "type": "string",
                  "example": "Plastico"
                },
                "cep": {
                  "type": "string",
                  "example": "12345678"
                },
                "logradouro": {
                  "type": "string",
                  "example": "Avenida egidios manuel de medeiros"
                },
                "bairro": {
                  "type": "string",
                  "example": "Bela Vista"
                },
                "numero": {
                  "type": "string",
                  "example": "123"
                },
                "localidade": {
                  "type": "string",
                  "example": "São Jose"
                },
                "uf": {
                  "type": "string",
                  "example": "SC"
                },
                "latitude": {
                  "type": "string",
                  "example": "-23.5489"
                },
                "longitude": {
                  "type": "string",
                  "example": "-46.6556"
                }
              },
              "required": [
                "nomeLocal",
                "descricaoLocal",
                "TipoResiduoAceito",
                "cep",
                "logradouro",
                "bairro",
                "numero",
                "localidade",
                "uf",
                "latitude",
                "longitude"
              ]
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Created"
          },
          "400": {
            "description": "Bad Request"
          },
          "401": {
            "description": "Unauthorized"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "get": {
        "tags": [
          "Locais"
        ],
        "description": "Listar todos os locais cadastrados pelo usuario",
        "parameters": [
          {
            "name": "authorization",
            "in": "header",
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Bad Request"
          },
          "401": {
            "description": "Unauthorized"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/local/{local_id}": {
      "put": {
        "tags": [
          "Locais"
        ],
        "description": "Avalia um local",
        "parameters": [
          {
            "name": "local_id",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "authorization",
            "in": "header",
            "type": "string"
          },
          {
            "name": "body",
            "in": "body",
            "description": "Permitido apenas a avaliar de 0 a 5",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "avaliacaoLocal": {
                  "type": "string",
                  "example": "4.5"
                }
              },
              "required": [
                "avaliacaoLocal"
              ]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Bad Request"
          },
          "401": {
            "description": "Unauthorized"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "get": {
        "tags": [
          "Locais"
        ],
        "description": "Listar local especifico cadastrado pelo usuario",
        "parameters": [
          {
            "name": "local_id",
            "in": "path",
            "required": true,
            "type": "string",
            "description": "Id do local"
          },
          {
            "name": "authorization",
            "in": "header",
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Bad Request"
          },
          "401": {
            "description": "Unauthorized"
          },
          "404": {
            "description": "Not Found"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "delete": {
        "tags": [
          "Locais"
        ],
        "description": "Deleta um local especifico cadastrado pelo usuario,não permite deletar locais de outro usuario",
        "parameters": [
          {
            "name": "local_id",
            "in": "path",
            "required": true,
            "type": "string",
            "description": "Id do local"
          },
          {
            "name": "authorization",
            "in": "header",
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Bad Request"
          },
          "401": {
            "description": "Unauthorized"
          },
          "404": {
            "description": "Not Found"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/local/atualizar_local/{local_id}": {
      "put": {
        "tags": [
          "Locais"
        ],
        "description": "Atualiza um local",
        "parameters": [
          {
            "name": "local_id",
            "in": "path",
            "required": true,
            "type": "string",
            "description": "Id do local"
          },
          {
            "name": "authorization",
            "in": "header",
            "type": "string"
          },
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "nomeLocal": {
                  "type": "string",
                  "example": "Lagoa da Conceição"
                },
                "descricaoLocal": {
                  "type": "string",
                  "example": " Proximo a avenida das rendeiras,esquina com a rua almoedo.Local de facil acesso"
                },
                "TipoResiduoAceito": {
                  "type": "string",
                  "example": "Plastico"
                },
                "cep": {
                  "type": "string",
                  "example": "12345678"
                },
                "logradouro": {
                  "type": "string",
                  "example": "Avenida egidios manuel de medeiros"
                },
                "bairro": {
                  "type": "string",
                  "example": "Bela Vista"
                },
                "numero": {
                  "type": "string",
                  "example": "123"
                },
                "localidade": {
                  "type": "string",
                  "example": "São Jose"
                },
                "uf": {
                  "type": "string",
                  "example": "SC"
                },
                "latitude": {
                  "type": "string",
                  "example": "-23.5489"
                },
                "longitude": {
                  "type": "string",
                  "example": "-46.6556"
                }
              },
              "required": [
                "nomeLocal",
                "descricaoLocal",
                "TipoResiduoAceito",
                "cep",
                "logradouro",
                "bairro",
                "numero",
                "localidade",
                "uf",
                "latitude",
                "longitude"
              ]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Bad Request"
          },
          "401": {
            "description": "Unauthorized"
          },
          "404": {
            "description": "Not Found"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/dashboard/": {
      "get": {
        "tags": [
          "Dashboard"
        ],
        "description": "Retorna o total de usuarios e locais",
        "parameters": [
          {
            "name": "authorization",
            "in": "header",
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Bad Request"
          },
          "401": {
            "description": "Unauthorized"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    }
  },
  "security": [
    {
      "apiKeyAuth": []
    }
  ]
}